###############################################################################
# Rename file to vars.yml set your variables here before running the playbook
# Also remember to set your host's IP address in the hosts file.
###############################################################################
#
# your domain name (e.g: example.com) - don't enter www. or other subdomains.
domain: EXAMPLE.COM

# common
main_user_name: YOUR_USER_NAME # username you'd like to log in with
admin_email: YOU@EXAMPLE.COM # an email address to receive notifications
server_ip_address: YOUR.SERVER.IP.ADDRESS

# MySQL
mysql_admin_user: admin
mysql_admin_password: useyourownpassword

# Redmine
redmine_db_name: redmine_production
redmine_db_user: redmine
redmine_db_password: useyourownpassword

# Gogs
gogs_db_name: gogs_production
gogs_db_user: gogs
gogs_db_password: useyourownpassword
gogs_admin_user: admin
gogs_admin_password: useyourownpassword

# Piwik
piwki_db_name: piwik
piwik_db_user: piwik
piwik_db_password: useyourownpassword
piwik_admin_user: admin
piwik_admin_password: useyourownpassword
